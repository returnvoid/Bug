<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="15dp"
    android:background="@android:color/transparent" 
    xmlns:app="http://schemas.android.com/apk/res/cl.returnvoid.bug">

    <ImageView
        android:id="@+id/pictureCover"
        android:layout_width="wrap_content"
        android:layout_height="76dp"
        android:alpha="0.5"
        android:contentDescription="@string/cl_returnvoid_cover_description"
        android:scaleType="matrix"
        android:src="@drawable/cover" />

    <ImageView
        android:id="@+id/pictureProfile"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/user_item"
        android:contentDescription="@string/cl_returnvoid_username"
        android:maxHeight="@dimen/profile_picture_height"
        android:maxWidth="@dimen/profile_picture_width"
        android:src="@drawable/com_facebook_profile_picture_blank_square" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/pictureProfile"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="3dp"
        android:layout_toRightOf="@+id/pictureProfile"
        android:text="@string/cl_returnvoid_username"
        android:textColor="#ffffff"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/name"
        android:layout_below="@+id/name"
        android:text="@string/cl_returnvoid_status"
        android:textColor="#ffffff"
        android:textSize="12sp"
        android:textStyle="normal"
        android:typeface="normal" />

    <TextView
        android:id="@+id/numberOfFriends"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/pictureCover"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="12dp"
        android:layout_marginRight="20dp"
        android:text="222 Friends"
        android:textColor="#ffffff"
        android:textSize="12sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/layoutStatus"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/pictureCover"
        android:background="#CE002D"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/topShadow"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@drawable/drop_shadow"
            android:src="@drawable/drop_shadow" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/layoutStatus"
        android:background="#F1EEE7"
        android:orientation="horizontal"
        android:paddingBottom="15dp"
        android:padding="15dp" >

    </LinearLayout>

</RelativeLayout>